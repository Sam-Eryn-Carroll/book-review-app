<%- include('../partials/header') %>

<form id="new-form" action="/books/<%= book._id %>?_method=PUT" method="POST">
    <label>Title:</label>
    <input type="text" name="title" value="<%= book.title %>">
    <label>Author:</label>
    <input type="text" name="author" value="<%= book.author %>">
    <label>Country:</label>
    <input type="text" name="country" value="<%= book.country %>">
    <label>Language:</label>
    <input type="text" name="language" value="<%= book.language %>">
    <label>Publisher:</label>
    <input type="text" name="publisher" value="<%= book.publisher %>">
    <label>Publication Date:</label>
    <input type="text" name="publicationDate" value="<%= book.publicationDate %>">
    <label>Pages:</label>
    <input type="number" name="pages" value="<%= book.pages %>">
    <input type="submit" value="Update Book">
  </form>

<%- include('../partials/footer') %>